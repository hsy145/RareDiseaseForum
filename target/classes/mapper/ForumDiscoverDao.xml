<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.backend.modules.dao.ForumDiscoverDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.backend.modules.entity.mysql.ForumDiscoverEntity" id="forumDiscoverMap">
        <result property="discoverId" column="discover_id"/>
        <result property="uId" column="u_id"/>
        <result property="discoverTitle" column="discover_title"/>
        <result property="discoverContent" column="discover_content"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 查询推文 -->
    <select id="getTweets" resultType="com.backend.modules.entity.mysql.ForumDiscoverEntity">
        SELECT discover_id, discover_title, src, create_time
        FROM forum_discover
        WHERE is_deleted = 0
        ORDER BY create_time DESC
        LIMIT 10
    </select>

    <!-- 查询推荐 -->
    <select id="getRecommendations" resultType="com.backend.modules.entity.mysql.ForumDiscoverEntity">
        SELECT discover_id, discover_title, LEFT(discover_content, 256) AS discover_content, src, create_time
        FROM forum_discover
        WHERE is_deleted = 0
        ORDER BY create_time DESC
        LIMIT 10
    </select>

    <!-- 查询中间框内容 -->
    <select id="getMiddleBoxContents" resultType="com.backend.modules.entity.mysql.ForumDiscoverEntity">
        SELECT discover_id, discover_title, discover_content, create_time
        FROM forum_discover
        WHERE is_deleted = 0
        ORDER BY create_time DESC
        LIMIT 5
    </select>

    <!-- 根据ID查询完整内容 -->
    <select id="getFullContentById" resultType="com.backend.modules.entity.mysql.ForumDiscoverEntity">
        SELECT discover_id, discover_title, discover_content, create_time
        FROM forum_discover
        WHERE discover_id = #{id} AND is_deleted = 0
    </select>


</mapper>